/* app.wxss */
.container {
  background-color: #f0f2f5;
  min-height: 100vh;
  padding: 20rpx;
}

.card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.tag {
  background-color: #f0f0f0;
  border-radius: 15rpx;
  padding: 5rpx 15rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}