        <view class="website-title">{{item.title}}</view>
        <view class="website-url">{{item.url}}</view>
        <view class="website-description">{{item.description}}</view>
        <view class="website-tags">
          <text class="tag" wx:for="{{item.tags}}" wx:key="*this" wx:for-item="tag">{{tag}}</text>
        </view>
      </view>
      <view class="website-actions">
