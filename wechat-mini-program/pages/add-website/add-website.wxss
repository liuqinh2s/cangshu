/* pages/add-website/add-website.wxss */
.container {
  padding: 20rpx;
  background-color: #f0f2f5;
  min-height: 100vh;
}

.form-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-label {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 10rpx;
}

.form-textarea {
  width: 100%;
  font-size: 28rpx;
  color: #666;
  border: 1rpx solid #f0f0f0;
  border-radius: 5rpx;
  padding: 10rpx;
  min-height: 120rpx;
}

.form-picker {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-text {
  display: inline-block;
  width: 100%;
}

.form-item .switch {
  margin-top: 10rpx;
}

.switch-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  border: none;
  margin-top: 40rpx;
}